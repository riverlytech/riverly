{
  "name": "api",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/main.ts",
    "start": "bun run dist/main.js",
    "build": "bun run typecheck && bun build ./src/main.ts --target bun --outdir dist --sourcemap=linked --minify",
    "preview": "bun run src/main.ts",
    "test": "bunx jest --detectOpenHandles",
    "lint": "eslint .",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "typecheck": "tsc --noEmit --pretty false",
    "check": "prettier --write . && eslint --fix ."
  },
  "dependencies": {
    "hono": "^4.9.6",
    "@riverly/config": "workspace:*",
    "@riverly/ty": "workspace:*",
    "@riverly/utils": "workspace:*",
    "@riverly/db": "workspace:*",
    "@riverly/riverly": "workspace:*",
    "@google-cloud/storage": "^7.17.1",
    "@hono/zod-validator": "^0.7.2",
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "jose": "catalog:",
    "ulid": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@swc/core": "^1.7.36",
    "@swc/jest": "^0.2.37",
    "@jest/globals": "^30.1.2",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.35.0",
    "globals": "^16.4.0",
    "jest": "^30.1.3",
    "jiti": "^2.5.1",
    "supertest": "^7.1.4",
    "typescript": "5.9.2",
    "typescript-eslint": "^8.43.0",
    "@types/bun": "catalog:",
    "prettier": "^3.6.2"
  }
}
