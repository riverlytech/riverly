{
  "name": "@riverly/app",
  "type": "module",
  "version": "0.0.0",
  "scripts": {
    "db:push": "bun drizzle-kit push",
    "db:generate": "bun drizzle-kit generate",
    "db:migrate": "bun drizzle-kit migrate",
    "staging:db:push": "bun --env-file=.env.staging drizzle-kit push",
    "staging:db:generate": "bun --env-file=.env.staging drizzle-kit generate",
    "staging:db:migrate": "bun --env-file=.env.staging drizzle-kit migrate"
  },
  "exports": {
    ".": "./src/index.ts",
    "./ty": "./src/ty/index.ts",
    "./env": "./src/env.ts",
    "./db": {
      "worker": "./src/db/db.serverless.ts",
      "node": "./src/db/db.node.ts",
      "default": "./src/db/db.node.ts"
    },
    "./db/schema": "./src/db/schema/index.ts",
    "./infra": "./src/infra/index.ts",
    "./infra/providers/gcp": "./src/infra/providers/gcp/index.ts"
  },
  "dependencies": {
    "@riverly/utils": "workspace:*",
    "@google-cloud/cloudbuild": "^5.3.0",
    "@google-cloud/logging": "^11.2.0",
    "@octokit/rest": "catalog:",
    "better-auth": "catalog:",
    "drizzle-kit": "^0.31.5",
    "drizzle-orm": "catalog:",
    "drizzle-zod": "catalog:",
    "pg": "catalog:",
    "google-gax": "^5.0.4",
    "jose": "catalog:",
    "octokit": "catalog:",
    "tsx": "^4.20.6",
    "ulid": "catalog:",
    "zod": "catalog:",
    "@resonatehq/sdk": "catalog:",
    "postgres": "catalog:",
    "@t3-oss/env-core": "catalog:"
  },
  "devDependencies": {
    "@types/node": "catalog:"
  }
}
